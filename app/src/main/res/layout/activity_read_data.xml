<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anderssonlegitapp.joakim.sensormadness.ReadDataActivity">

    <TextView
        android:id="@+id/Azimuth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Azimuth (Degrees)"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AzimuthData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="Wait for data"
        app:layout_constraintLeft_toLeftOf="@+id/Azimuth"
        app:layout_constraintTop_toBottomOf="@+id/Azimuth" />

    <ImageView
        android:id="@+id/Arrow"
        android:layout_width="107dp"
        android:layout_height="85dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintLeft_toLeftOf="@+id/AzimuthData"
        app:layout_constraintRight_toRightOf="@+id/Azimuth"
        app:layout_constraintTop_toBottomOf="@+id/AzimuthData"
        app:srcCompat="@drawable/pic_arrow" />
</android.support.constraint.ConstraintLayout>
